{{> adminHeader event_name=event_name tenant_name=tenant_name}}
<div class="wrapper">
    <main class="admin">
        <p class="back-link"><a data-animation="slideInLTR" class="icon icon--inline icon--back" href="/admin/home?event_id={{event_id}}">Back</a></p>
        <section>
            <h2>Edit tournaments</h2>
            <form id="post-tournament" method="POST" action="/api/tournament">
                <input type="hidden" name="event_id" value="{{event_id}}">
                <div class="row">
                    <label>Tournament:</label>
                    <select id="tournament_edit_dropdown" name="tournament_id">
                    </select>
                </div>
                <fieldset id="tournament-fieldset"></fieldset>
            </form>
        </section>
    </main>
</div>
{{> footer event_id=event_id season_id=season_id view="admin"}}
