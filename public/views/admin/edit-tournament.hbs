{{> adminHeader league_name=league_name tenant_name=tenant_name}}
<div class="wrapper">
    <main class="admin">
        {{> backLink }}
        <section>
            <h2>Edit tournaments</h2>
            <form id="post-tournament" method="POST" action="/api/tournament">
                <input type="hidden" name="league_id" value="{{league_id}}">
                <div class="row">
                    <label>Tournament:</label>
                    <select id="tournament_edit_dropdown" name="tournament_id">
                    </select>
                </div>
                <fieldset id="tournament-fieldset"></fieldset>
            </form>
        </section>
    </main>
</div>
{{> footer league_id=league_id season_id=season_id view="admin"}}
