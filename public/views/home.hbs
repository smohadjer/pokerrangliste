<header>
    <div class="flex">
        {{#if event_name}}
          <h3>{{event_name}}</h3>
        {{else}}
          <h3>turnies.de</h3>
        {{/if}}
        <h2>Home</h2>
        <div class="align-right">
          {{#if isLoggedIn}}
            <p class="icon icon--inline icon--account">{{tenant_name}}</p>
          {{/if}}
        </div>
    </div>
</header>
<div class="wrapper">
    <main>
      <p>Turnies app allows you to create and manage poker tournaments and share results with others.</p>
      <section class="box">
        <p>Select event to see results:</p>
        <form class="mg-top loading">
          <select id="events_dropdown">
            <option selected option="">Select Event</option>
          </select>
        </form>
      </section>
      {{#if isLoggedIn}}
        <section class="box">
          <h2>Create new event</h2>
          <form method="POST" action="/api/events">
            <label>Event name:</label>
            <input name="name">
            <div class="submit">
                <button>Submit</button>
            </div>
            <p class="error"></p>
          </form>
        </section>
        {{> logout }}
      {{else}}
        <p><a href="/login">Login</a> or <a href="/register">Register</a> to start setting up your own events.</p>
      {{/if}}
    </main>
</div>
{{#if event_id}}
  {{> footer event_id=event_id season_id=season_id view="home"}}
{{/if}}

