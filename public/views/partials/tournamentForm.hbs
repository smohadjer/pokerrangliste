<div class="row">
    <label>Date: *</label>
    <input required name="date" type="date" value="{{date}}"/>
</div>
<div class="row">
    <label>Buyin: *</label>
    <input required name="buyin" type="number" value="{{buyin}}"/>
</div>
<div class="row">
    <label>Season:</label>
    <select id="season_dropdown" name="season_id">
    </select>
</div>
<div class="row row--status">
    <label>Status: *</label>
    <div class="wrapper-status">
        <div>
            <input required {{#ifCond status '==' 'upcoming'}} checked {{/ifCond}} name="status" id="upcoming" type="radio" value="upcoming">
            <label for="upcoming">Upcoming</label>
        </div>
        <div>
            <input required {{#ifCond status '==' 'pending'}} checked {{/ifCond}} name="status" id="pending" type="radio" value="pending">
            <label for="pending">Live</label>
        </div>
        <div>
            <input required {{#ifCond status '==' 'done'}} checked {{/ifCond}} name="status" id="done" type="radio" value="done">
            <label  for="done">Completed</label>
        </div>
    </div>
</div>

