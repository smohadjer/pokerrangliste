<div class="row row--addPlayers row--mt2">
    <label>Add players <span id="players-count"></span></label>
    <div>
        <select id="player_dropdown">
            <option selected disabled option="">Select</option>
        </select>
    </div>
</div>

<!-- showing useful tournament data -->
{{#ifCond status '!=' 'upcoming'}}
    <div class="row">
        <label>Total rebuys:</label>
        <span>{{rebuys}}</span>
    </div>
    <div class="row">
        <label>Total prize:</label>
        <span>{{totalPrize}}</span>
    </div>
{{/ifCond}}

<table class="table-players">
    <thead>
        <tr>
            <th>Player</th>
            <th>Ranking</th>
            <th>Rebuys</th>
            <th>Prize</th>
        </tr>
    </thead>
    <tbody id="players">
        <!-- added via js -->
    </tbody>
</table>

<div class="submit">
    <button>Save Tournament</button>
</div>
