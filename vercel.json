{
    "cleanUrls": true,
    "redirects": [
        {
            "source": "/admin",
            "destination": "/admin/home"
        }
    ],
    "rewrites": [
        {
            "source": "/register",
            "destination": "/"
        },
        {
            "source": "/home",
            "destination": "/"
        },
        {
            "source": "/admin/(.*)",
            "destination": "/"
        },
        {
            "source": "/ranking:path*",
            "destination": "/:path*"
        },
        {
            "source": "/tournaments:path*",
            "destination": "/:path*"
        },
        {
            "source": "/tournament:path*",
            "destination": "/:path*"
        },
        {
            "source": "/profile:path*",
            "destination": "/:path*"
        },
        {
            "source": "/api/players/:id",
            "destination": "/api/players"
        },
        {
            "source": "/api/players/name/:name",
            "destination": "/api/players"
        }
      ]
}
